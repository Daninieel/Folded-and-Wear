@{
    ViewData["Title"] = "Admin";
}

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        .button-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            margin-top: 50px;
        }

        .admin-button {
            width: 220px;
            height: 80px; 
            font-size: 18px;
            font-weight: bold;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            white-space: normal;
            padding: 10px 15px;
        }

        @@media (min-width: 1200px) {
            .button-container {
                flex-wrap: nowrap;
            }

            .admin-button {
                flex: 1;
                max-width: 220px;
                height: 80px;
            }
        }

    </style>
</head>

<body>
    <div class="container mt-4">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">Admin Dashboard</h2>
            </div>
            <div class="card-body">
                <p class="lead text-center">Welcome, Admin! Manage the system efficiently.</p>
                <div class="button-container">
                    <a href="@Url.Action("ManageUsers", "Admin")" class="btn btn-primary admin-button">Manage Users</a>
                    <a href="@Url.Action("ManageOrders", "Admin")" class="btn btn-success admin-button">Manage Orders</a>
                    <a href="@Url.Action("ManagePayments", "Admin")" class="btn btn-warning admin-button">Manage Payments</a>
                    <a href="@Url.Action("MonthlyReport", "Admin")" class="btn btn-secondary admin-button">Monthly Reports</a>
                </div>

                <div class="mt-4 text-center">
                    <a href="@Url.Action("Logout", "Account")" class="btn btn-secondary">Logout</a>
                </div>
            </div>
        </div>
    </div>
</body>