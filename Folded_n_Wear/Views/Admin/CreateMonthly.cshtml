@model Folded_n_Wear.Models.MonthlyReport

@{
    ViewData["Title"] = "Create Monthly Report";
}

<div class="container mt-5">
    <h2>Add Monthly Report</h2>
    <form asp-action="CreateMonthly" method="post">
        <div class="form-group">
            <label asp-for="TotalEarnings" class="control-label"></label>
            <input asp-for="TotalEarnings" class="form-control" />
            <span asp-validation-for="TotalEarnings" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Add Monthly Report" class="btn btn-primary" />
        </div>
    </form>
</div>