@model IEnumerable<Folded_n_Wear.Models.MonthlyReport>

@{
    ViewData["Title"] = "Monthly Report";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Monthly Report</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center" style="color:white">Monthly Report</h2>

        @if (TempData["AlertMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["AlertMessage"]
            </div>
        }

        <div class="p-4 shadow-lg rounded bg-white">
            @if (!Model.Any())
            {
                <p class="text-center">Monthly reports will be generated in the database.</p>
            }
            else
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Report ID</th>
                            <th>Date of Report</th>
                            <th>Total Earnings</th>
                            <th>Total Kilos Processed</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var report in Model)
                        {
                            <tr>
                                <td>@report.ReportID</td>
                                <td>@report.DateOfReport.ToString("MMMM dd, yyyy")</td>
                                <td>₱@report.TotalEarnings.ToString("F2")</td>
                                <td>@report.TotalKilosProcessed.ToString("F2") kg</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>

        <div class="mt-4 text-center">
            <form asp-action="CreateMonthly" method="post">
                <button type="submit" class="btn btn-primary" style="width: 200px;">Generate Monthly Report</button>
            </form>
        </div>
    </div>
</body>
</html>
