@{
    ViewData["Title"] = "Manage Users";
}

<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

    <style>
        .table-container {
            width: 100%;
            height: 250px; 
            overflow: auto;
            border: 1px solid #ccc;
            background-color: white;
        }

        .table th, .table td {
            white-space: nowrap;
        }

    </style>
</head>

<script>
    $(document).ready(function () {
        loadCustomers();

        function loadCustomers() {
            $.ajax({
                url: '@Url.Action("GetCustomers", "Admin")',
                type: 'GET',
                dataType: 'json',
                success: function (data) {
                    var customerTable = $("#customerTable tbody");
                    customerTable.empty();

                    if (data.error) {
                        alert("Error: " + data.details);
                        return;
                    }

                    if (data.length > 0) {
                        $.each(data, function (index, customer) {
                            var row = `<tr>
                                        <td>${customer.customerID}</td>
                                        <td>${customer.custName}</td>
                                        <td>${customer.email}</td>
                                        <td>${customer.contactNo}</td>
                                        <td>${new Date(customer.dateJoined).toISOString().split('T')[0]}</td>
                                        <td>
                                            <a href="@Url.Action("Edit", "Admin", new { id = "__customerID__" })" class="btn btn-warning btn-sm">Edit</a>
                                            <button class="btn btn-danger btn-sm w-50" onclick="deleteCustomer(${customer.customerID})">Delete</button>
                                        </td>
                                    </tr>`;
                            customerTable.append(row.replace(/__customerID__/g, customer.customerID));
                        });
                    } else {
                        customerTable.append('<tr><td colspan="6" class="text-center">No customers found.</td></tr>');
                    }
                },
                error: function (xhr, status, error) {
                    console.error("AJAX Error:", xhr.responseText);
                    alert("Failed to load customer data: " + xhr.responseText);
                }
            });
        }

            window.deleteCustomer = function (customerId) {
                if (confirm("Are you sure you want to delete this customer?")) {
                    $.ajax({
                        url: '@Url.Action("DeleteConfirmed", "Admin")',
                        type: 'POST',
                        data: { id: customerId },
                        success: function () {
                            alert("Customer deleted successfully.");
                            loadCustomers();
                        },
                        error: function (xhr, status, error) {
                            console.error("AJAX Error:", xhr.responseText);
                            alert("Failed to delete customer: " + xhr.responseText);
                        }
                    });
                }
            };


        $("#searchInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#customerTable tbody tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
            });
        });

        setInterval(loadCustomers, 10000);
    });
</script>

<body>
    <div class="container mt-4">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">Manage Users</h2>
            </div>
            <div class="card-body">
                <p class="lead">Welcome, Admin! Manage the users here.</p>

                <div class="row mt-4">
                    <div class="col-md-12">
                        <div class="card text-center border-primary">
                            <div class="card-body">
                                <h5 class="card-title">Customer List</h5>
                                <p class="card-text">View all registered customers.</p>

                                <input type="text" id="searchInput" class="form-control mb-3" placeholder="Search customers...">

                                <div class="table-container">
                                    <table id="customerTable" class="table table-bordered table-striped">
                                        <thead class="thead-dark">
                                            <tr>
                                                <th>Customer ID</th>
                                                <th>Name</th>
                                                <th>Email</th>
                                                <th>Contact No</th>
                                                <th>Date Joined</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (ViewBag.Customers != null)
                                            {
                                                foreach (var customer in ViewBag.Customers)
                                                {
                                                    <tr>
                                                        <td>@customer.customerID</td>
                                                        <td>@customer.custName</td>
                                                        <td>@customer.email</td>
                                                        <td>@customer.contactNo</td>
                                                        <td>@customer.dateJoined.ToString("yyyy-MM-dd")</td>
                                                        <td class="d-flex">
                                                            <a asp-controller="Account" asp-action="Edit" asp-route-id="@customer.customerID" class="btn btn-primary btn-sm mr-2">Edit</a>
                                                            <a href="javascript:void(0);" class="btn btn-primary btn-sm mr-2" onclick="deleteCustomer(@customer.customerID)" style="width:200px">Delete</a>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                            else
                                            {
                                                <tr>
                                                    <td colspan="6" class="text-center">No customers found.</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-4 text-center">
                    <a href="@Url.Action("Logout", "Account")" class="btn btn-secondary">Logout</a>
                    <a href="@Url.Action("Create", "Admin")" class="btn btn-secondary">Create</a>
                </div>
            </div>
        </div>
    </div>
</body>
