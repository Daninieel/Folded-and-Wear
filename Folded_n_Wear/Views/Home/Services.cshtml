@{
    ViewData["Title"] = "Services";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>FOLDED N' WEAR - Services</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <style>
        html, body {
            height: 100%;
            overflow: auto;
            color: white;
        }

        .services-page-background {
            background-color: #07518e;
            padding: 20px 0;
            min-height: 100%;
            margin-top: 80px;
        }

        .hero-section {
            position: relative;
            overflow: hidden;
            height: 200px;
            margin-top: 20px;
        }

        .hero-image {
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            height: 100%;
            object-fit: cover;
        }

        .service-card {
            background-color: #05487d;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            text-align: center;
            transition: transform 0.3s, box-shadow 0.3s;
            margin-bottom: 20px;
        }

            .service-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            }

            .service-card h3 {
                font-size: 1.5rem;
                font-weight: bold;
                margin-bottom: 15px;
                color: white;
            }

            .service-card p {
                font-size: 1rem;
                color: white;
            }

        @@media (min-width: 768px) {
            .services-page-background {
                margin-top: 120px;
                padding: 50px 0;
            }

            .hero-section {
                height: 300px;
                margin-top: 30px;
            }
        }
    </style>
</head>
<body>
    <div class="services-page-background">
        <div class="container-fluid px-0">
            <h1 class="text-center mb-4">Our Services</h1>

            <div class="hero-section mb-3 mb-md-5">
                <img src="https://img.freepik.com/free-photo/man-holding-pile-clean-clothes_23-2149117027.jpg?t=st=1743677378~exp=1743680978~hmac=d6113d11e0f9a83262757057e3a5399dc47e41ebd78391df9516543f3fd6a973&w=996" alt="Laundry Services" class="img-fluid w-100 hero-image" />
            </div>

            <div class="container">
                <div class="row">
                    <div class="col-12 col-md-6 mb-4">
                        <div class="service-card">
                            <h3>Regular Laundry</h3>
                            <p>We handle your everyday clothes like T-shirts, pants, and dresses with care. Affordable and efficient!</p>
                            <p><strong>Rate:</strong> ₽28.00 per kilo</p>
                        </div>
                    </div>
                    <div class="col-12 col-md-6 mb-4">
                        <div class="service-card">
                            <h3>Heavy Items</h3>
                            <p>We clean blankets, towels, linens, and comforters. Perfect for bulky items that are hard to wash at home.</p>
                            <p><strong>Rate:</strong> ₽40.00 - ₽65.00 per kilo</p>
                        </div>
                    </div>
                </div>

                <div class="mt-3 mt-md-4">
                    <div class="service-card">
                        <h3>Rush Service</h3>
                        <p>Need your laundry done quickly? Our rush service ensures same-day pickup for an additional charge.</p>
                        <p><strong>Rate:</strong> Double the total amount</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>