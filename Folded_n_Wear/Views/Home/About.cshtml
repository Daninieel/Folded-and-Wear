@{
    ViewData["Title"] = "About Us";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>FOLDED N' WEAR - About Us</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <style>
        html, body {
            height: 100%;
            overflow: auto;
            color: white;
        }

        .about-page-background {
            background-color: #07518e;
            padding: 20px 0;
            min-height: 100%;
            margin-top: 80px;
        }

        .hero-section {
            position: relative;
            overflow: hidden;
            height: 200px;
            margin-top: 20px;
        }

        .hero-image {
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            height: 100%;
            object-fit: cover;
        }

        .content-section {
            background-color: #05487d;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            text-align: center;
            transition: transform 0.3s, box-shadow 0.3s;
            margin-bottom: 20px;
        }

            .content-section:hover {
                transform: translateY(-10px);
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            }

            .content-section h2 {
                font-size: 1.5rem;
                font-weight: bold;
                margin-bottom: 15px;
                color: white;
            }

            .content-section p {
                font-size: 1rem;
                color: white;
            }

        @@media (min-width: 768px) {
            .about-page-background {
                margin-top: 120px;
                padding: 50px 0;
            }

            .hero-section {
                height: 300px;
                margin-top: 50px;
            }
        }
    </style>
</head>
<body>
    <div class="about-page-background">
        <div class="container-fluid px-0">
            <h1 class="text-center mb-4">About Us</h1>

            <div class="hero-section mb-3 mb-md-5">
                <img src="https://images.pexels.com/photos/10565610/pexels-photo-10565610.jpeg" alt="About Us Image" class="img-fluid w-100 hero-image" />
            </div>

            <div class="container">
                <div class="row">
                    <div class="col-12 mb-4">
                        <div class="content-section">
                            <h2>Description</h2>
                            <p>Welcome to Folded N Wear, your trusted laundry service in Cabuyao, Laguna. We are dedicated to providing high-quality laundry services with a focus on efficiency, affordability, and customer satisfaction.</p>
                        </div>
                    </div>
                    <div class="col-12 mb-4">
                        <div class="content-section">
                            <h2>Mission</h2>
                            <p>To provide exceptional laundry services that save our customers time and effort, while maintaining the highest standards of quality and care for their garments.</p>
                        </div>
                    </div>
                    <div class="col-12 mb-4">
                        <div class="content-section">
                            <h2>Vision</h2>
                            <p>To become the leading laundry service provider in the region, known for our reliability, innovation, and commitment to customer satisfaction.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>