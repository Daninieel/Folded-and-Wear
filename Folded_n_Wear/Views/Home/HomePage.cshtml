@{
    ViewData["Title"] = "Home";
}

<head>
    <title>FOLDED N' WEAR</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <style>
        .content-container {
            padding-top: 100px;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .brand-header {
            color: white;
            font-size: 3.5rem;
            margin-bottom: 1.5rem;
        }

        .welcome-message {
            color: white;
            font-size: 1.5rem;
            margin-bottom: 2rem;
        }

        .logout-button {
            background: #057d43;
            color: #FFFFFF;
            padding: 8px 16px
            border: none;
            border-radius: 6px; 
            font-size: 1rem;
            cursor: pointer;
            transition: 0.3s;
            margin-bottom: 2rem;
            width: 120px; 
            height: 40px;
        }

            .logout-button:hover {
                background: #07e379;
                transform: scale(1.05);
            }

        .tagline {
            color: white;
            margin-top: 2rem;
        }

        @@media (max-width: 768px) {
            .content-container {
                padding-top: 80px;
            }

            .brand-header {
                font-size: 2.5rem;
            }

            .welcome-message {
                font-size: 1.2rem;
            }

            .logout-button {
                width: 100px
                height: 36px;
                padding: 6px 12px;
            }
        }
    </style>
</head>

<body class="background">
    <div class="content-container">
        <div class="text-center">
            <h1 class="brand-header">FOLDED N' WEAR</h1>

            <!-- Display username from ViewBag -->
            @if (Context.Session.GetString("custName") != null)
            {
                @if (ViewBag.Role == "Admin" || ViewBag.Role == "Customer")
                {
                    <h2 class="welcome-message">Welcome, @Context.Session.GetString("custName")!</h2>
                }

                @using (Html.BeginForm("Logout", "Account", FormMethod.Post))
                {
                    <button type="submit" class="logout-button">Logout</button>
                }
            }

            <p class="tagline"><b>Book now</b> - and let us wash your worries away!</p>
        </div>
    </div>
</body>